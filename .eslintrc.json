{
    "env": {
        "browser": true,
        "es6": true,
        "node": true,
        "qunit": true
    },
    "globals": {
        "addon": false
    },
    "extends": "eslint:recommended",
    "rules": {

        "indent": [
            "error",
            4
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "always"
        ],
        "no-unsafe-negation": ["error"],
        "curly": ["error", "all"],
        "dot-notation": ["warn"],
        "eqeqeq": ["error", "smart"],
        "no-caller": "error",
        "no-implicit-globals": "error",
        "no-magic-numbers": ["warn", {"ignore": [0, 1]}],
        "no-new-func": "error",
        "no-new": "error",
        "no-return-assign": "error",
        "no-self-compare": "error",
        "no-throw-literal": "error"
    }
}
